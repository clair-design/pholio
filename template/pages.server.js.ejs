var routes = [
<% pages.forEach(function(item, index){ %>
  {
    path: "<%- item.fullPath %>",
    component: <%- item.content %>,
    meta: { layout: "<%- item.layout %>" }
  },
<% }); %>
  { path: "*", redirect: "/error" }
];

module.exports = {
  routes: routes,
  mode: "<%= routerMode %>",
  render: function (h) {
    var layout = this.$route.meta.layout || 'default'
    return h('div', { attrs: { id: 'root' } }, [h('layout-' + layout)])
  },
  data: {}
}
