;(function (){
var routes = [
<% pages.forEach(function(item, index){ %>
  {
    path: "<%- item.fullPath %>",
    component: function () {
      return createApp.jsonp("<%- item.hash %>")
    },
    meta: {
      layout: "<%- item.layout %>"
    }
  },
<% }); %>
  { path: "*", redirect: "/error" }
];

createApp.use({
  install (Vue) {
    Vue.prototype.$pages = <%- JSON.stringify(navInfo) %>
  }
})

createApp({
  routes: routes,
  mode: "<%= routerMode %>",
  render: function (h) {
    var layout = this.$route.meta.layout || 'default'
    return h('div', { attrs: { id: 'root' } }, [h('layout-' + layout)])
  },
  data: {}
});
}());
